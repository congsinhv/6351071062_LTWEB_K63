
@using bookStore.Models
@model List<Giohang>

@{
    ViewBag.Title = "GioHang";
}

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>

<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>Mã sách</td>
        <td>Tên sách</td>
        <td>Ảnh bìa</td>
        <td>Số lượng</td>
        <td>Đơn giá</td>
        <td>Thành tiền</td>
        <td></td>
        <td></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td>@item.iMasach</td>
            <td>@item.sTensach</td>
            <td><img style="width:100px; height:150px" src="@item.sAnhbia"></td>
            @using (Html.BeginForm("CapnhatGiohang", "GioHang", new { @iMaSp = item.iMasach }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:yellow; width:30px" />
                </td>

                <td>@String.Format("{0:0,0}", item.dDongia)</td>
                <td>@String.Format("{0:0,0}", item.dThanhtien)</td>
                <td><a href="@Url.Action( "Details", "Bookstore", new { id = item.iMasach })">Detail</a></td>
                <td> @Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSp = item.iMasach })</td>
                <td><input type="submit" value="Cập nhật" /></td>
            }
        </tr>
    }

    <tr style="font-weight:bold; text-align:right; color:red">
        <td colspan="4">Số lượng sách: @(ViewBag.Tongsoluong ?? 0)</td>
        <td colspan="5">Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien ?? 0) VNĐ</td>
    <tr style="font-weight:bold; color:blue; text-align:right;">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ hàng", "XoaTatcaGiohang")
        </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right;">
        <td colspan="9" align="center">
            @Html.ActionLink("ĐẶT HÀNG", "Dathang","Giohang")
        </td>
    </tr>
</table>
