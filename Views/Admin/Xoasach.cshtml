@model bookStore.Models.SACH

@{
    ViewBag.Title = "Xoasach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    dt {
        font-weight: 600;
        text-align: right;
    }

    dd {
        margin: 0;
    }

    .row {
        display: flex;
        gap: 8px;
    }
</style>
<p style="margin-bottom:20px;">
    @Html.ActionLink("QUAY VỀ TRANG TRƯỚC", "Sach", "Admin")

</p>
<h2>XÁC NHẬN THÔNG TIN SÁCH CẦN XÓA</h2>

<h3>Bạn quyết định xóa quyển sách này</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <div class="row">
            <dt>
                Tên sách:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tensach)
            </dd>
        </div>

        <div class="row">
            <dt>
                Giá bán:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Giaban)
            </dd>
        </div>

        <div class="row">
            <dt>
                Mô tả:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Mota)
            </dd>
        </div>

        <div class="row">
            <dt>
                Ảnh bìa:
            </dt>

            <dd>
                <img src="@Model.Anhbia" alt="Sach image" width="100px" height="auto" />
            </dd>
        </div>

        <div class="row">
            <dt>
                Ngày cập nhật:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Ngaycapnhat)
            </dd>
        </div>

        <div class="row">
            <dt>
                Số lượng tồn:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Soluongton)
            </dd>
        </div>

        <div class="row">
            <dt>
                Mã CD:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaCD)
            </dd>
        </div>

        <div class="row">
            <dt>
                Mã NXB:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaNXB)
            </dd>
        </div>

    </dl>

   
    <td> @Html.ActionLink("Delete", "XacNhanXoa", new { @id = Model.Masach })</td>
</div>
