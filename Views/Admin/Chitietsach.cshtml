@model bookStore.Models.SACH

@{
    ViewBag.Title = "Chitietsach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    dt{
        font-weight:600;
        text-align:right;

    }
    dd {

        margin: 0;
    }
    .row{
        display:flex;
        gap:8px;
    }
</style>
<h2>Chitietsach</h2>
<p style="margin-bottom:20px;">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Masach }) |
    @Html.ActionLink("QUAY TRỞ LẠI TRANG TRƯỚC", "Sach", "Admin")
</p>

<div>
    <h4>THÔNG TIN CHI TIẾT CỦA SÁCH</h4>
    <hr />
    <dl class="dl-horizontal">
        <div class="row">
            <dt>
                Tên sách:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tensach)
            </dd>
        </div>

        <div class="row">
            <dt>
               Giá bán:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Giaban)
            </dd>
        </div>

        <div class="row">
            <dt>
               Mô tả:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Mota)
            </dd>
        </div>

        <div class="row">
            <dt>
               Ảnh bìa:
            </dt>

            <dd>
                <img src="@Model.Anhbia" alt="Sach image" width="100px" height="auto"/>
            </dd>
        </div>

        <div class="row">
            <dt>
                Ngày cập nhật:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Ngaycapnhat)
            </dd>
        </div>
         
        <div class="row">
            <dt>
                Số lượng tồn:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Soluongton)
            </dd>
        </div>

        <div class="row">
            <dt>
               Mã CD:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaCD)
            </dd>
        </div>

        <div class="row">
            <dt>
                Mã NXB:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaNXB)
            </dd>
        </div>

    </dl>
</div>
